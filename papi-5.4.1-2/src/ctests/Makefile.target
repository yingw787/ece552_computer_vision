prefix = /usr/local
exec_prefix = ${prefix}
PACKAGE_TARNAME = papi
datadir = ${prefix}/share/${PACKAGE_TARNAME}
testlibdir = $(datadir)/testlib
INCLUDE = -I. -I${prefix}/include -I$(testlibdir)
LIBDIR  = ${exec_prefix}/lib
LIBRARY=libpapi.a
SHLIB=libpapi.dylib
PAPILIB = $(LIBDIR)/$(LIBRARY)
TESTLIB = $(testlibdir)/libtestlib.a
LDFLAGS =  
CC	= gcc
MPICC	= 
F77	= gfortran
CC_R	= $(CC) -pthread
CFLAGS	= -DNEED_FFSLL 
OMPCFLGS = -fopenmp
